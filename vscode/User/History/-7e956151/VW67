CC=gcc
DEBUG= -g -fsanitize=address
CFLAGS= -Wall -Wextra -Werror -std=c99 # $(DEBUG)
CPPFLAGS=
LDFLAGS=

SRC= \
	src/main.c 	\
	src/cgroups.c 	\
	src/log.c 	\

OBJ=$(patsubst %.c,%.o, $(SRC))

BIN=mymoulette

$(BIN): $(OBJ)
	$(CC) $(LDFLAGS) $(CFLAGS) $^ -o $@

setcap: $(BIN)
	@echo "Give SYS_ADMIN capability to the binary"
	sudo setcap "cap_sys_admin+ep" $(BIN)

%.o: %.cc
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $^ -o $@




.PHONY: clean
clean:
	$(RM) $(BIN)
	$(RM) $(OBJ)
