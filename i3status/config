general {
    output_format = "i3bar"
        colors = true
        interval = 5
}

order += "battery 0"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "tztime paris"
order += "tztime dublin"

wireless _first_ {
# %quality
# %essid
# %bitrate
# %ip
    format_up = "ğŸ“¶ %essid (%quality, %bitrate) IP: %ip"
        format_down = "W: down"
}

ethernet _first_ {
# %speed
# %ip
    format_up = "E: %ip (%speed)"
        format_down = ""
}

battery 0 {
# %emptytime: Estimated time limit without charging
# %remaining: Estimated time remaining without charging
# %status: Battery status
# %percentage: current battery percentage
    format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ğŸ”‹"
        status_unk = "â“"
        status_full = "ğŸ‘Œ"
        path = "/sys/class/power_supply/BAT1/uevent"
        low_threshold = 10
}

